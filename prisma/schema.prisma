generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  kindeId   String
  bio       String?
  upiId     String
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}